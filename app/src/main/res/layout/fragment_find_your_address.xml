<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindYourAddressFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top">
    <TextView
        android:id="@+id/enter_your_details_headher_title"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@drawable/basicimage"
        android:gravity="left|center"
        android:padding="25dp"
        android:text="Where can we find you"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="130dp"
        android:text="We detected the following addresses,\nplease select your current residential status."
        android:textColor="@color/white"></TextView>
    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/backarrow"
        android:layout_marginTop="25dp"
        android:layout_marginStart="26dp"
        android:layout_height="30dp">
    </ImageView>
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="210dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/first_name_enter_your_details"
        android:layout_width="match_parent"
        android:background="@drawable/backgroundshadow"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:padding="15dp"
        android:hint="Search for area or street name.."
        android:drawableRight="@drawable/search"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/email_id_enter_your_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/editTextTextPersonLastName"
        android:text="House / Flat / Block No."
        android:textSize="15sp" />
    <EditText
        android:id="@+id/editTextTextPersonEmailIdDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:text="" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="Area / Road"
        android:textSize="15sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:text="" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="City"
        android:textSize="15sp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:text="" />
    <!--  style="@android:style/Widget.Material.Spinner.Underlined"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="6sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/first_name_enter_your_details"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="State"
        android:textSize="15sp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:text="" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="6sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/first_name_enter_your_details"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="Pincode"
        android:textSize="15sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:text="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/AddYourAddressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

</FrameLayout>