<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourBasicDetailsFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    >

    <TextView
        android:id="@+id/enter_your_details_headher_title"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@drawable/basicimage"
        android:gravity="left|center"
        android:padding="25dp"
        android:text="Please filled\nyour basic details"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/backarrow"
        android:layout_marginTop="25dp"
        android:layout_marginStart="26dp"
        android:layout_height="30dp">
    </ImageView>
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="220dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backgroundshadow"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:background="@drawable/ownedicon"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Owned"
            android:layout_marginTop="-15dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="A person who owns\nthe house. "
            android:textColor="#000000"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="40dp"
                android:background="@drawable/roundcircle"
                android:gravity="center"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="25dp"
                    android:background="@drawable/arrowicon"
                    android:layout_marginRight="5dp"
                    android:layout_height="20dp">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backgroundshadow"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:background="@drawable/rentedicon"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Rented"
            android:layout_marginTop="-15dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="A property which is occupied \nby someone other than the owner."
            android:textColor="#000000"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="40dp"
                android:background="@drawable/roundcircle1"
                android:gravity="center"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="25dp"
                    android:id="@+id/RentedButtonClick"
                    android:background="@drawable/arrowicon"
                    android:layout_marginRight="5dp"
                    android:layout_height="20dp">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</FrameLayout>