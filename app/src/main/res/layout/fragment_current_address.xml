<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentAddressFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    >

    <TextView
        android:id="@+id/enter_your_details_headher_title"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@drawable/basicimage"
        android:gravity="left|center"
        android:padding="25dp"
        android:text="Select current \naddress"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/backarrow"
        android:layout_marginTop="25dp"
        android:layout_marginStart="26dp"
        android:layout_height="30dp">
    </ImageView>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/first_name_enter_your_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="Add address"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_id_enter_your_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPersonLastName"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="House / Flat / Block No."
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonEmailIdDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_id_enter_your_details"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:inputType="textEmailAddress"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="Area / Road"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:inputType="textEmailAddress"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="City"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:inputType="textEmailAddress"
            android:text="" />
        <!--  style="@android:style/Widget.Material.Spinner.Underlined"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/first_name_enter_your_details"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="State"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:inputType="textEmailAddress"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/first_name_enter_your_details"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="Pincode"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:inputType="textEmailAddress"
            android:text="" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/AddYourAddressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>